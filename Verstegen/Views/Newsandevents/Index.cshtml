@{
    ViewData["Title"] = "Overzicht News & Events";
}

<!-- Header -->
<header class="masthead news-masthead d-flex justify-content-end">
    <div class="container text-center my-auto">
        <h1 class="mb-1 h1">News & Events</h1>
        <h2 class="mb-1 h2">Stay up to date</h2>
    </div>
    <div class="overlay"></div>
</header>

<div class="container">

    <div class="row mt-4">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                <li class="breadcrumb-item" aria-current="page"><a class="active" href="/newsandevents">News & Events</a></li>
            </ol>
        </div>
    </div>

    <div class="row mt-5">
        <div class="col-md-3">
            <img class="float-left img-fluid" src="~/images/home/rozemarijn.jpg" alt="rozemarijn" />
        </div>
        <div class="col-md-6">
            <h1 class="h2">What's happening at Verstegen?</h1>
            <p class="news-p">
                Aenean eu leo quam. Pellentesque ornare sem lacinia quam veneatis vestibulum. Praesent commodo cursus magna, vel scelerisque nisl consectetur et.
            </p>
        </div>
    </div>
    <div class="products-content row">
        <div class="col-md-3 products-sidebar">          
            <h5>Filter</h5>
            <ul class="product-type-filter">
                <li><input type="checkbox" name="news" id="news" value="news"><label for="news">News</label></li>
                <li><input type="checkbox" name="trends" id="trends" value="trends"><label for="trends">Trends</label></li>
                <li><input type="checkbox" name="innovations" id="innovations" value="innovations"><label for="innovations">Innovations</label></li>
                <li><input type="checkbox" name="stories" id="stories" value="stories"><label for="news">Stories</label></li>
            </ul>

            <h5 class="mt-5">Upcoming events</h5>

        </div>

        <div class="col-md-8 product-rows">
            <div class="row text-center">
                @foreach (Blog p in ViewBag.News)
                {            
                    <div class="col-12 col-sm-3">
                        <a href="@Url.Action("details", "newsandevents", new { id = p.BlogId })">
                            <img class="spotlightImg img-fluid" src="@p.ImgUrl" alt="@p.Type" />
                            <div class="spotlightTitle">@p.Type</div>
                            <p class="spotlightP text-left">
                                <strong>@p.Title</strong><br />
                                @p.Date.ToShortDateString()
                            </p>
                         </a>
                    </div>
                }
            </div>
            <div class="row pagination">
                <div class="col-md-3 p-0">
                    <div class="page-item">
                        <a href="@Url.Action("Index", "newsandevents", new { page = ViewBag.Page-1 })" class="btn btn-red btn-lg @Html.Raw(ViewBag.Page < 2 ? "disabled" : "red-color")">
                            <div class="button-text-white">
                                <img src="~/images/icons/left-arrow.svg" class="icon-arrow-left-white"> Back
                            </div>
                        </a>
                    </div>
                </div>
                <div class="col-md-3 d-flex justify-content-center">
                    @for (var j = 1; j < ViewBag.AmountPages + 1; j++)
                    {
                        <div class="page-item @Html.Raw(ViewBag.Page == j ? "active disabled" : "")"><a class="page-link" href="@Url.Action("Index", "Products", new { page = j })">@j</a></div>
                    }
                </div>
                <div class="col-md-3 d-flex justify-content-end p-0">
                    <div class="page-item">
                        <a href="@Url.Action("Index", "newsandevents", new { page = ViewBag.Page+1 })" class="btn btn-red btn-lg @Html.Raw(ViewBag.Page > ViewBag.AmountPages - 1 ? "disabled" : "red-color")">
                            <div class="button-text-white">
                                Next <img src="~/images/icons/right-arrow-white.svg" class="icon-arrow-right-white">
                            </div>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>