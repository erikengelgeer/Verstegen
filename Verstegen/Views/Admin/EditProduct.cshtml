@model Verstegen.Models.Product

@{
    ViewData["Title"] = "Edit";
}
<header class="masthead masthead-admin d-flex justify-content-end">
    <div class="container text-center my-auto">
        <h2 class="mb-1 h2">Edit Product</h2>
        <h3 class="3">@Model.Title</h3>
    </div>
</header>

<div class="container mt-md-5">
    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="ProductId" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input autocomplete="off" asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input autocomplete="off" asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                    <select class="form-control" name="CategoryId">
                        <option value="@ViewBag.ActiveCategory.CategoryId" selected>@ViewBag.ActiveCategory.CategoryName</option>
                        @foreach (Category c in ViewBag.Categories)
                        {
                            int id = c.CategoryId;
                            string name = c.CategoryName;
                            @if (!name.Equals(ViewBag.ActiveCategory.CategoryName))
                            {
                                <option value="@id">@name</option>
                            }

                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input autocomplete="off" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contents" class="control-label"></label>
                    <input autocomplete="off" asp-for="Contents" class="form-control" />
                    <span asp-validation-for="Contents" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDetails" class="control-label"></label>
                    <input autocomplete="off" asp-for="ProductDetails" class="form-control" />
                    <span asp-validation-for="ProductDetails" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgUrl" class="control-label"></label>
                    <input autocomplete="off" asp-for="ImgUrl" class="form-control" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AltString" class="control-label"></label>
                    <input autocomplete="off" asp-for="AltString" class="form-control" />
                    <span asp-validation-for="AltString" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" asp-action="AllProducts"/>
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="AllProducts">Back to List</a>
    </div>

</div>