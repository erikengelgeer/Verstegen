@model IEnumerable<Verstegen.Models.Contact>
@{
    ViewData["Title"] = "AllContacts";
}

<header class="masthead masthead-admin d-flex justify-content-end">
    <div class="container text-center my-auto">
        <h2 class="mb-1 h2">Contacts</h2>
    </div>
</header>

<div class="container mt-md-5">
    <p>
        <a class="btn btn-success mb-4 float-left" asp-action="Index">Back to Admin</a>
        <a class="btn btn-success mb-4 float-right" asp-action="CreateContact">Add new contact</a>
    </p>
    <table class="table table-light table-bordered table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Function)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Country)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Province)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Tel)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ImgUrl)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var contacts in ViewBag.contacts)
            {
                <tr>
                    <td>
                        @contacts.Name
                    </td>
                    <td>
                        @contacts.Function
                    </td>
                    <td>
                        @contacts.Country
                    </td>
                    <td>
                        @contacts.Province
                    </td>
                    <td>
                        @contacts.Tel
                    </td>
                    <td>
                        @contacts.Email
                    </td>
                    <td>
                        <img class="img-thumbnail img-small" src="@contacts.ImgUrl" alt="Alternate Text" />
                    </td>
                    <td>
                        <a class="btn btn-primary btn-block" asp-controller="Admin" asp-action="EditContact" asp-route-id="@contacts.ContactId"><i class="far fa-edit"></i></a>
                        <a class="btn btn-danger btn-block" asp-controller="Admin" asp-action="DeleteContact" asp-route-id="@contacts.ContactId"
                           onclick=" return confirm('Item verwijderen?') "><i class="far fa-trash-alt"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

