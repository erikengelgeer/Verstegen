@model Verstegen.Models.Product

@{
    ViewData["Title"] = "Create";
}
<header class="masthead masthead-admin d-flex justify-content-end">
    <div class="container text-center my-auto">
        <h2 class="mb-1 h2">Create Product</h2>
    </div>
</header>

<div class="container mt-md-5">
    <h4>Product</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="CreateProduct">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input required autocomplete="off" asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input required autocomplete="off" asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                    <select class="form-control" name="CategoryId">
                        @foreach (Category c in ViewBag.Categories)
                        {
                            int id = c.CategoryId;
                            string name = c.CategoryName;
                            <option value="@id" class="form-control">@name</option>
                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="Description" class="control-label"></label>
                    <input required autocomplete="off" asp-for="Description" class="form-control" />
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Contents" class="control-label"></label>
                    <input required autocomplete="off" asp-for="Contents" class="form-control" />
                    <span asp-validation-for="Contents" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ProductDetails" class="control-label"></label>
                    <input required autocomplete="off" asp-for="ProductDetails" class="form-control" />
                    <span asp-validation-for="ProductDetails" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgUrl" class="control-label"></label>
                    <input required autocomplete="off" asp-for="ImgUrl" class="form-control" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AltString" class="control-label"></label>
                    <input required autocomplete="off" asp-for="AltString" class="form-control" />
                    <span asp-validation-for="AltString" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="AllProducts">Back to List</a>
    </div>

</div>