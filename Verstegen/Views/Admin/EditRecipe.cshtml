@model Verstegen.Models.Recipe

@{
    ViewData["Title"] = "Edit";
}
<header class="masthead masthead-admin d-flex justify-content-end">
    <div class="container text-center my-auto">
        <h2 class="mb-1 h2">Edit Recipe</h2>
        <h3 class="3">@Model.Title</h3>
    </div>
</header>

<div class="container mt-md-5">

    <h4>Recipe</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="EditRecipe">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="RecipeId" />
                <div class="form-group">
                    <label asp-for="Title" class="control-label"></label>
                    <input asp-for="Title" class="form-control" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SubTitle" class="control-label"></label>
                    <input asp-for="SubTitle" class="form-control" />
                    <span asp-validation-for="SubTitle" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Type" class="control-label"></label>
                    <input asp-for="Type" class="form-control" />
                    <span asp-validation-for="Type" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AmountOfPeople" class="control-label"></label>
                    <input asp-for="AmountOfPeople" class="form-control" />
                    <span asp-validation-for="AmountOfPeople" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ImgUrl" class="control-label"></label>
                    <input asp-for="ImgUrl" class="form-control" />
                    <span asp-validation-for="ImgUrl" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Procedure" class="control-label"></label>
                    <input asp-for="Procedure" class="form-control" />
                    <span asp-validation-for="Procedure" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Decoration" class="control-label"></label>
                    <input asp-for="Decoration" class="form-control" />
                    <span asp-validation-for="Decoration" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ThemeId" class="control-label">Theme</label>
                    <select class="form-control" name="ThemeId">
                        <option value="@ViewBag.ActiveTheme.ThemeId" selected>@ViewBag.ActiveTheme.Name</option>
                        @foreach (Theme t in ViewBag.Themes)
                        {
                            int id = t.ThemeId;
                            string name = t.Name;
                            @if (!name.Equals(ViewBag.ActiveTheme.Name))
                            {
                                <option value="@id">@name</option>
                            }

                        }
                    </select>
                </div>
                <div class="form-group">
                    <label asp-for="CategoryId" class="control-label">Category</label>
                    <select class="form-control" name="CategoryId">
                        <option value="@ViewBag.ActiveCategory.CategoryId" selected>@ViewBag.ActiveCategory.CategoryName</option>
                        @foreach (Category c in ViewBag.Categories)
                        {
                            int id = c.CategoryId;
                            string name = c.CategoryName;
                            @if (!name.Equals(ViewBag.ActiveCategory.CategoryName))
                            {
                                <option value="@id">@name</option>
                            }

                        }
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="AllRecipes">Back to List</a>
    </div>

</div>