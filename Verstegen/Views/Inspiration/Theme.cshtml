@{
    ViewData["Title"] = "Inspiration Theme";
}

<header class="masthead inspirationThemeImg">
    <div class="col-12 text-left">
        <h1 class="h1" id="detailH1">Products are sourced from where they grow</h1>
    </div>
    <a class="ct-btn-scroll ct-js-btn-scroll" href="#content">
        <img alt="Arrow Down" src="https://www.solodev.com/assets/anchor/arrow-down.png">
    </a>
</header>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                <li class="breadcrumb-item"><a href="/Inspiration">Inspiration</a></li>
                <li class="breadcrumb-item active" aria-current="page">Products are sourced from where they grow</li>
            </ol>
        </div>
    </div>
</div>
<div class="container-fluid" id="content">
    <div class="row mt-5">
        <div class="col-sm-12 col-md-9 d-flex justify-content-end">
            <div class="home-inner-container d-flex align-items-center">
                <p class="body-text">
                    The food sector is constantly developing, and so is Verstegen.
                    It is for this reason that Verstegen has been a major player since the company was founded in 1886.
                    That is over 130 years of anticipation, creation and inspiration and - above all - providing the best quality.
                    Based on partnership and trust, we work closely with our associates on new trends, demands and products, with consideration for today and tomorrow.
                </p>
            </div>
        </div>
        <div class="col-md-3 d-none d-md-block">
            <img class="float-right img-fluid" src="~/images/home/rozemarijn.jpg" alt="rozemarijn" />
        </div>
    </div>
</div>
<div class="container">
    <div class="row margin-bottom">
        <div class="col-md-6 mr-5">
            <img class="img-fluid background-image" src="~/images/Stories/field-worker.jpg" alt="Steak image" />
        </div>
        <div class="col-md-5 d-flex align-items-center">
            <div class="usp-block">
                <h6 class="h6">@ViewBag.Blogs[0].Subject</h6>
                <h2 class="h2">@ViewBag.Blogs[0].Title</h2>
                <p class="body-text">
                    @ViewBag.Blogs[0].Text
                </p>
                <button type="button" class="btn btn-red btn-lg">
                    Read more <img src="~/images/icons/right-arrow-white.svg" class="icon-arrow-right-white">
                </button>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid green-background">
    <div class="container">
        <div class="row margin-bottom py-6">
            <div class="col-md-6 mr-5">
                <img class="img-fluid background-image" src="~/images/Stories/lab-worker.jpg" alt="Chicken image" />
            </div>
            <div class="col-md-5 d-flex align-items-center">
                <div class="green-usp-block">
                    <h6 class="h6">@ViewBag.Blogs[1].Subject</h6>
                    <h2 class="h2">@ViewBag.Blogs[1].Title</h2>
                    <p class="body-text">
                        @ViewBag.Blogs[1].Text
                    </p>
                    <button type="button" class="btn btn-white btn-lg">
                        Read more <img src="~/images/icons/right-arrow-red.svg" class="icon-arrow-right-green">
                    </button>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="element-title mt-5">
        <h2 class="h2">Our @ViewBag.Theme.Name Concepts</h2>
    </div>
</div>
<div class="container-fluid pb-5">
    <div id="carousel" class="inspiration-carousel carousel slide carousel-fade" data-ride="#carousel">
        <div class="carousel-inner">
            @foreach (Recipe r in ViewBag.Recipes)
            {
            <div class="carousel-item @Html.Raw(r.RecipeId == ViewBag.Recipes[0].RecipeId ? "active" : "")">
                <a href="@Url.Action("Recipe", "Recipes", new { id = r.RecipeId })">
                    <img class="spotlightImg inspirationCarouselImg img-fluid img-big" src="~/@r.ImgUrl" alt="Meal image" />
                    <div class="spotlightTitle">Recipe</div>
                    <p class="spotlightP text-left">
                        <strong>@r.Title</strong><br />
                        @r.SubTitle
                    </p>
                </a>
            </div>
            }
        </div>
        <a class="carousel-control-prev" data-target="#carousel" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" data-target="#carousel" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>
<div class="container">
    <div class="row margin-bottom">
        <div class="col-md-6 mr-5">
            <img class="img-fluid background-image" src="~/images/Stories/hand-seasoning.jpg" alt="Seasoning image" />
        </div>
        <div class="col-md-5 d-flex align-items-center">
            <div class="usp-block">
                <h6 class="h6">@ViewBag.Blogs[2].Subject</h6>
                <h2 class="h2">@ViewBag.Blogs[2].Title</h2>
                <p class="body-text">
                    @ViewBag.Blogs[2].Title
                </p>
                <button type="button" class="btn btn-red btn-lg">
                    Read more <img src="~/images/icons/right-arrow-white.svg" class="icon-arrow-right-white">
                </button>
            </div>
        </div>
    </div>
    <div class="row margin-bottom">
        <div class="col-md-5 d-flex align-items-center">
            <div class="usp-block">
                <h6 class="h6">@ViewBag.Blogs[3].Subject</h6>
                <h2 class="h2">@ViewBag.Blogs[3].Title</h2>
                <p class="body-text">
                    @ViewBag.Blogs[3].Text
                </p>
                <button type="button" class="btn btn-red btn-lg">
                    Read more <img src="~/images/icons/right-arrow-white.svg" class="icon-arrow-right-white">
                </button>
            </div>
        </div>
        <div class="col-md-1"></div>
        <div class="col-md-6">
            <img class="img-fluid background-image" src="~/images/Stories/chef-worker.jpg" alt="Field Worker image" />
        </div>
    </div>
</div>
<div class="container-fluid green-background py-5 mt-5">
    <div class="container product-inspiration">
        <div class="element-title mt-5">
            <h6 class="h6"> C a t e g o r i e s</h6>
            <h2 class="h2"> Find the best ideas in your branch </h2>
        </div>
        <div class="row justify-content-center">
            @foreach (Recipe r in ViewBag.Recipes)
            {
                <div class="col-sm-6 col-md-6 mt-4">
                    <div class="card inspiration-card-3">
                        <div class="card-img-block">
                            <img class="" src="~/@r.ImgUrl" alt="Card image cap" />
                        </div>
                        <div class="card-body">
                            <h6 class="h6">@r.Type</h6>
                            <a href="@Url.Action("Recipe", "Recipes", new { id = r.RecipeId })" class="card-title">@r.Title<span class="fas fa-arrow-right"></span></a>
                            <p class="card-text mt-1">@r.SubTitle</p>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="row d-flex justify-content-center">
            <a href="/Recipes">
                <div type="button" class="btn btn-white btn-lg mt-4 mb-5">
                    All recipes <img src="~/images/icons/right-arrow-red.svg" class="icon-arrow-right-green">
                </div>
            </a>
        </div>
    </div>
</div>
<div class="container">
    <div class="element-title mt-5">
        <h6 class="h6">P r o d u c t s</h6>
        <h2 class="h2">Check out our products</h2>
    </div>
    <div class="row text-center justify-content-center">
        <div class="col-12 col-sm-3">
            <img class="spotlightImg img-fluid" src="~/images/home/herbs.jpg" alt="Spices & Herbs" />
            <div class="spotlightTitle">Product</div>
            <a href="#">
                <p class="spotlightP text-left">
                    <strong>Allspice ground</strong><br />
                    Spices & Herbs
                </p>
            </a>
        </div>
        <div class="col-12 col-sm-3">
            <img class="spotlightImg img-fluid" src="~/images/home/herbs.jpg" alt="Spices & Herbs" />
            <div class="spotlightTitle">Product</div>
            <a href="#">
                <p class="spotlightP text-left">
                    <strong>Allspice ground</strong><br />
                    Spices & Herbs
                </p>
            </a>
        </div>
        <div class="col-12 col-sm-3">
            <img class="spotlightImg img-fluid" src="~/images/home/herbs.jpg" alt="Spices & Herbs" />
            <div class="spotlightTitle">Product</div>
            <a href="#">
                <p class="spotlightP text-left">
                    <strong>Allspice ground</strong><br />
                    Spices & Herbs
                </p>
            </a>
        </div>
        <div class="col-12 col-sm-3">
            <img class="spotlightImg img-fluid" src="~/images/home/herbs.jpg" alt="Spices & Herbs" />
            <div class="spotlightTitle">Product</div>
            <a href="#">
                <p class="spotlightP text-left">
                    <strong>Allspice ground</strong><br />
                    Spices & Herbs
                </p>
            </a>
        </div>
        <a class="btn btn-lg btn-red" href="/products" role="button">All products <span class="fas fa-arrow-right"></span></a>
    </div>
</div>
