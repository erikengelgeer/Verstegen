@model Blog

@{
    ViewData["Title"] = "Inspiration Detail";
}

<header class="masthead inspirationDetailImg">
    <div class="col-12 text-left">
        <h1 class="h1" id="detailH1">@Model.Title</h1>
    </div>
    <a class="ct-btn-scroll ct-js-btn-scroll mr-5 mt-5" href="#content">
        <img alt="Arrow Down" class="down-arrow" src="~/images/icons/down-arrow-white.svg">
    </a>
</header>
<div class="container">
    <div class="row mt-4">
        <div class="col-md-12">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                <li class="breadcrumb-item"><a href="/HowWeWork">How we work</a></li>
                <li class="breadcrumb-item active" aria-current="page">@Model.Title</li>
            </ol>
        </div>
    </div>
</div>
<div class="container-fluid" id="content">
    <div class="row mt-5">
        <div class="col-sm-12 col-md-9 d-flex justify-content-end">
            <div class="home-inner-container d-flex align-items-center">
                <p class="body-text">
                    The food sector is constantly developing, and so is Verstegen.
                    It is for this reason that Verstegen has been a major player since the company was founded in 1886.
                    That is over 130 years of anticipation, creation and inspiration and - above all - providing the best quality.
                    Based on partnership and trust, we work closely with our associates on new trends, demands and products, with consideration for today and tomorrow.
                </p>
            </div>
        </div>
        <div class="col-md-3 d-none d-md-block">
            <img class="float-right img-fluid" src="~/images/home/rozemarijn.jpg" alt="rozemarijn" />
        </div>
    </div>
</div>
<div class="container">
    <div class="col-8 offset-2">
        <div class="row">
            <p class="body-text inspirationP">
                @Model.Text
            </p>
        </div>
        <div class="row d-flex align-items-center my-5">
            <div class="col-3">
                <img class="img-fluid rounded float-left" alt="Office guy image" src="https://cambridgesound.com/wp-content/uploads/2017/01/hr-managers.jpg" />
                <img class="img-fluid rounded position-absolute" id="inspirationQuoteIcon" alt="Quote icon" src="~/images/inspiration/two-quotes.svg" />
            </div>
            <div class="col-8 offset-1">
                <p class="body-text inspirationQuote"><em>@Model.Quote</em></p>
                <p class="body-text inspirationP">@Model.QuoteFrom</p>
            </div>
        </div>
        <div class="row">
            <p class="h5"><strong>@Model.SubTitle</strong></p>
            <p class="body-text inspirationP">
                @Model.SubText
            </p>
        </div>
        <div class="row my-5">
            <div class="card" style="width: 100%;">
                <img class="card-img-top" src="~/@Model.ImgUrl" alt="@Model.ImgUrl">
                <div class="card-body">
                    <p class="card-text text-center">@Model.Title</p>
                </div>
            </div>
        </div>
        <div class="row d-flex align-items-center">
            <div class="body-text m-3">Share this</div>
            <a href="https://www.youtube.com/channel/UCm3nQjm1SwJ2S_HsCs3E_8w">
                <div class="square">
                    <img src="~/images/footer/youtube-logo.svg" alt="YouTube" />
                </div>
            </a>
            <a href="https://www.facebook.com/VerstegenNL">
                <div class="square">
                    <img src="~/images/footer/facebook-logo.svg" alt="Facebook" />
                </div>
            </a>
            <a href="https://twitter.com/verstegen_nl">
                <div class="square">
                    <img src="~/images/footer/twitter-logo.svg" alt="Twitter" />
                </div>
            </a>
        </div>
    </div>
</div>
<div class="container">
    <div class="element-title mt-5">
        <h6 class="h6">i n s p i r a t i o n</h6>
        <h2 class="h2">Related to this post</h2>
    </div>
    <div class="row text-center">
        <div class="col-12 col-sm-3">
            <img class="spotlightImg img-fluid" src="~/images/home/herbs.jpg" alt="Spices & Herbs" />
            <div class="spotlightTitle">Product</div>
            <a href="#">
                <p class="spotlightP text-left">
                    <strong>Allspice ground</strong><br />
                    Spices & Herbs
                </p>
            </a>
        </div>
        <div class="col-12 col-sm-3">
            <img class="spotlightImg img-fluid" src="~/images/home/ribs.jpg" alt="Ribs" />
            <div class="spotlightTitle">Story</div>
            <a href="#">
                <p class="spotlightP text-left">
                    <strong>"Bio marinades: honest & sustainable"</strong><br />
                    Trend
                </p>
            </a>
        </div>
        <div class="col-12 col-sm-3">
            <img class="spotlightImg img-fluid" src="~/images/home/sausages.jpg" alt="African Farmer Sausages" />
            <div class="spotlightTitle">Recipe</div>
            <a href="#">
                <p class="spotlightP text-left">
                    <strong>African Farmer Sausages</strong><br />
                    Meat
                </p>
            </a>
        </div>
        <div class="col-12 col-sm-3">
            <img class="spotlightImg img-fluid" src="~/images/home/sausages.jpg" alt="African Farmer Sausages" />
            <div class="spotlightTitle">Recipe</div>
            <a href="#">
                <p class="spotlightP text-left">
                    <strong>African Farmer Sausages</strong><br />
                    Meat
                </p>
            </a>
        </div>
        <div class="col-md-12">
            <a href="@Url.Action("Index", "Inspiration", new { page = 1, id = 0 })" class="btn btn-red btn-lg">
                <div class="button-text-white">
                    All Inspirations <img src="~/images/icons/right-arrow-white.svg" class="icon-arrow-right-white">
                </div>
            </a>
        </div>
    </div>
    
    
</div>